{% extends '@admin/layout.twig' %}

{% block title "Editer l'article" %}

{% block body %}

    {% if item is defined and item is not null %}
    <h1>Editer {{ item.name }}</h1>

        <form action="{{ path('admin.blog.edit', {id: item.id}) }}" method="post">
            <div class="form-group">
                <label for="name">Titre</label>
                <input type="text" id="name" class="form-control" name="name" value="{{ item.name }}">
            </div>

            <div class="form-group">
                <label for="slug">Slug</label>
                <input type="text" id="slug" class="form-control" name="slug" value="{{ item.slug }}">
            </div>

            <div class="form-group">
                <label for="content">Contenu</label>
                <textarea id="content" class="form-control" name="content">
                    {{ item.content }}
                </textarea>
            </div>
            <button type="submit" class="btn btn-primary">Valider</button>
        </form>

    {% endif %}

{% endblock %}

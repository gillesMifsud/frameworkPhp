{% extends 'layout.twig' %}

{% block title "Liste des articles" %}

{% block body %}

    <p>Liste des articles</p>

    {% if posts is defined and posts is not null %}

        <ul>
        {% for post in posts %}
            <li>
                <a href="{{ path('blog.show', {slug: post.slug, id: post.id}) }}">
                    {{ post.name }}
                </a>
            </li>
        {% endfor %}
        </ul>

    {% endif %}

{% endblock %}